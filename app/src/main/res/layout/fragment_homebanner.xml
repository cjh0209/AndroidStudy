<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/home_banner_image_iv"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
            >

            <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

            <Button
            android:id="@+id/btn_mic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/ic_baseline_mic_24" />

            <Button
            android:id="@+id/btn_option"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/ic_baseline_brightness_5_24" />

        </LinearLayout>

        <TextView
        android:id="@+id/text1"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="-550dp"
        android:paddingLeft="15dp"
        android:text="포근하게 덮어주는 꿈의 목소리"
        android:textSize="34dp"
        android:textColor="@color/white" />

        <Button
        android:id="@+id/btn_main_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-60dp"
        android:background="@drawable/ic_baseline_play_circle_24" />
        <TextView
        android:id="@+id/text2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="총 20곡 2023.07.12"
        android:textSize="19dp"
        android:textColor="@color/white" />


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"

        android:layout_marginTop="-24dp">
            <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft= "20dp"
            android:layout_marginTop= "10dp"
            android:src="@drawable/music"
            />
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            >
                <TextView
                android:id="@+id/text3"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:paddingLeft="20dp"
                android:layout_marginTop= "6dp"
                android:text="Finale."
                android:textSize="22dp"
                android:textColor="@color/white" />
                <TextView
                android:id="@+id/text5"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:text="eill"
                android:textSize="18dp"
                android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="10dp">
            <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft= "10dp"
            android:layout_marginTop= "5dp"
            android:src="@drawable/music"
            />
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text4"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:paddingLeft="20dp"
                android:layout_marginTop= "5dp"
                android:text="노래 제목"
                android:textSize="21dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/text6"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:paddingLeft="20dp"
                android:text="가수명"
                android:textSize="18dp"
                android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>